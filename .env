# Azera Environment Configuration
ENV=dev

# Database
DATABASE_URL=postgresql://root@localhost:26257/azera?sslmode=disable
DB_MAX_CONNECTIONS=20

# Cache (DragonflyDB)
DRAGONFLY_URL=redis://localhost:6379

# LLM
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
LLM_CONTEXT_WINDOW=4096

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=azera_key

# Full-Text Search
MEILI_URL=http://localhost:7700
MEILI_MASTER_KEY=azera_key

# Logging
RUST_LOG=info,azera_core=debug

# API
API_PORT=3000
API_HOST=0.0.0.0

# Frontend
VITE_API_URL=http://localhost:3000
VITE_OLLAMA_HOST=http://localhost:11434

# AI Behavior
DREAM_INTERVAL_HOURS=7
DREAM_THRESHOLD_SECONDS=300
REFLECTION_HOUR=23

# Backup Settings
BACKUP_INTERVAL_MINS=5

# Feature Flags
RAG_ENABLED=true
TOOLS_ENABLED=true
DREAM_ENABLED=true

# Development
NODE_ENV=development
DEBUG=false